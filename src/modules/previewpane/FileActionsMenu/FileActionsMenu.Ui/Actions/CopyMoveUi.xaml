<ui:FluentWindow xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        x:Class="FileActionsMenu.Ui.Actions.CopyMoveUi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ui:WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        Title="File Actions Menu" Height="450" Width="800"
        ExtendsContentIntoTitleBar="True"
        Closing="FluentWindow_Closing">
    <Grid Margin="0,10,0,10">
        <StackPanel>
            <ui:TitleBar ShowMinimize="False" ShowMaximize="False">
            </ui:TitleBar>
            <TextBlock x:Name="WindowTitle" FontSize="20" FontWeight="Bold" Margin="10"/>
            <ProgressBar x:Name="ActionProgressBar" Height="20" Margin="10" />
            <TextBlock x:Name="FileIndicator" Margin="10" />
            <ui:Button x:Name="CancelButton" Content="Cancel" Margin="10" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</ui:FluentWindow>
