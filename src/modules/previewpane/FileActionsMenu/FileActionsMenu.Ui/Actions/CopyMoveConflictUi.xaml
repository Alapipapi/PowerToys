<ui:FluentWindow xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="FileActionsMenu.Ui.Actions.CopyMoveConflictUi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Title="File Actions Menu" Height="200" Width="450" Closed="Window_Closed">
    <Grid>
        <ui:TitleBar ShowMinimize="False" ShowMaximize="False">
        </ui:TitleBar>
        <StackPanel Margin="0,10,0,10">
            <TextBlock Text="Copy/Move Conflict" FontSize="20" FontWeight="Bold" Margin="10"/>
            <TextBlock x:Name="DescriptionTextElement" Margin="10"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" x:Name="ReplaceButton" Content="Replace" Click="ReplaceButton_Click" Margin="10" />
                <Button Grid.Column="1" x:Name="IgnoreButton" Content="Ignore" Click="IgnoreButton_Click" Margin="10" />
            </Grid>
        </StackPanel>
    </Grid>
</ui:FluentWindow>
