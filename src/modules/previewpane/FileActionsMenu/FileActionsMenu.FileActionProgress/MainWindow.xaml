<?xml version="1.0" encoding="utf-8"?>
<winuiex:WindowEx
    xmlns:winuiex="using:WinUIEx"
    x:Class="FileActionsMenu.FileActionProgress.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    IsMaximizable="False"
    IsMinimizable="True"
    IsResizable="False"
    Title="File Action Progress"
    Width="500" Height="230"
    IsTitleBarVisible="True">
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid x:Name="AppTitleBar"
            Height="32"
            ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftPaddingColumn" Width="0" />
                <ColumnDefinition x:Name="IconColumn" Width="Auto" />
                <ColumnDefinition x:Name="TitleColumn" Width="Auto" />
                <ColumnDefinition x:Name="RightDragColumn" Width="*" />
                <ColumnDefinition x:Name="RightPaddingColumn" Width="0" />
            </Grid.ColumnDefinitions>
            <Image
                Grid.Column="1"
                Width="16"
                Height="16"
                VerticalAlignment="Center"
                Source="../Assets/FileLocksmith/Icon.ico" />
            <TextBlock
                x:Name="AppTitleTextBlock"
                Grid.Column="2"
                VerticalAlignment="Center"
                Style="{StaticResource CaptionTextBlockStyle}" />
        </Grid>
        <StackPanel Grid.Row="1" Margin="16,0">
            <TextBlock x:Name="WindowTitle" FontSize="20" FontWeight="Bold" Margin="10"/>
            <ProgressBar Maximum="100" Value="50" x:Name="ActionProgressBar" Margin="10" />
            <TextBlock TextTrimming="CharacterEllipsis" x:Name="FileIndicator" Margin="10,10,10,1" />
            <TextBlock TextTrimming="CharacterEllipsis" x:Name="NumberIndicator" Margin="10,1,10,10" />
            <Button x:Name="CancelButton" Content="Cancel" Margin="10,1,10,0" Click="CancelButton_Click" HorizontalAlignment="Right" />
        </StackPanel>
    </Grid>
</winuiex:WindowEx>
